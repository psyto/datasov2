# DataSov Frontend Environment Configuration

# API Configuration
REACT_APP_API_URL=http://localhost:3001
REACT_APP_API_TIMEOUT=30000

# Mock Mode (for development and demo)
REACT_APP_MOCK_MODE=true

# Authentication
REACT_APP_AUTH_ENABLED=true
REACT_APP_JWT_SECRET=your-jwt-secret-here

# Feature Flags
REACT_APP_ENABLE_ANALYTICS=true
REACT_APP_ENABLE_NOTIFICATIONS=true
REACT_APP_ENABLE_REAL_TIME=true

# Blockchain Configuration
REACT_APP_SOLANA_RPC_URL=https://api.devnet.solana.com
REACT_APP_SOLANA_PROGRAM_ID=your-program-id-here
REACT_APP_CORDA_RPC_URL=http://localhost:10006

# Development
REACT_APP_DEBUG=true
REACT_APP_LOG_LEVEL=info

# Analytics (Optional)
REACT_APP_GOOGLE_ANALYTICS_ID=
REACT_APP_MIXPANEL_TOKEN=

# Social Login (Optional)
REACT_APP_GOOGLE_CLIENT_ID=
REACT_APP_GITHUB_CLIENT_ID=

# File Upload
REACT_APP_MAX_FILE_SIZE=10485760
REACT_APP_ALLOWED_FILE_TYPES=image/jpeg,image/png,application/pdf

# Performance
REACT_APP_CACHE_DURATION=300000
REACT_APP_DEBOUNCE_DELAY=300
