# DataSov Integration Layer Configuration

# Server Configuration
PORT=3000
NODE_ENV=development
LOG_LEVEL=info

# Storage Configuration (Arweave)
STORAGE_TYPE=arweave
ARWEAVE_HOST=arweave.net
ARWEAVE_PORT=443
ARWEAVE_PROTOCOL=https
STORAGE_TIMEOUT=30000
STORAGE_LOGGING=false
ARWEAVE_WALLET={"kty":"RSA","n":"...","e":"AQAB","d":"...","p":"...","q":"...","dp":"...","dq":"...","qi":"..."}

# Solana Configuration
SOLANA_RPC_URL=https://api.devnet.solana.com
SOLANA_PROGRAM_ID=Fg6PaFpoGXkYsidMpWTK6W2BeZ7FEfcYkg476zPFsLnS
SOLANA_PRIVATE_KEY=your_solana_private_key_here

# Cross-Chain Bridge Configuration
BRIDGE_ENABLED=true
SYNC_INTERVAL=5000
PROOF_VALIDATION_TIMEOUT=30000
MAX_RETRY_ATTEMPTS=3

# Security Configuration
JWT_SECRET=your_jwt_secret_here
ENCRYPTION_KEY=your_encryption_key_here
API_RATE_LIMIT=100

# Database Configuration (for state persistence)
DATABASE_URL=postgresql://username:password@localhost:5432/datasov_integration
REDIS_URL=redis://localhost:6379

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30000

# External Services
KYC_SERVICE_URL=https://kyc-service.example.com
KYC_SERVICE_API_KEY=your_kyc_api_key
ORACLE_SERVICE_URL=https://oracle-service.example.com
ORACLE_SERVICE_API_KEY=your_oracle_api_key
